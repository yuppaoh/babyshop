{# Kế thừa layout frontend #}
{% extends "frontend/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Login
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Đăng nhập
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<div style="height: 60px;"></div>
<table class="table table-bordered table-hover mt-2">
        <thead class="thead-dark">
            <tr>
                <th>Mã Sản phẩm</th>
                <th>Tên Sản phẩm</th>
                <th>Giá</th>
                <th>Giá cũ</th>
                <th>Mô tả</th>
                <th>Ngày cập nhật</th>
                <th>Số lượng</th>
                <th>Loại sản phẩm</th>
                <th>Nhà sản xuất</th>
                <th>Khuyến mãi</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            {% for sanpham in ds_sanpham %}
            <tr>
                <td>{{ sanpham.sp_ma }}</td>
                <td>{{ sanpham.sp_ten }}</td>
                <td>{{ sanpham.sp_gia }}</td>
                <td>{{ sanpham.sp_giacu }}</td>
                <td>
                    {{ sanpham.sp_mota_ngan }}
                    <p>
                        {{ sanpham.sp_mota_chitiet }}
                    </p>
                </td>
                <td>{{ sanpham.sp_ngaycapnhat }}</td>
                <td>{{ sanpham.sp_soluong }}</td>
                <td>{{ sanpham.lsp_ten }}</td>
                <td>{{ sanpham.nsx_ten }}</td>
                <td>{{ sanpham.km_tomtat }}</td>
                <td>
                    <!-- Nút sửa, bấm vào sẽ hiển thị form hiệu chỉnh thông tin dựa vào khóa chính `sp_ma` -->
                    <a href="edit.php?sp_ma={{ sanpham.sp_ma }}" class="btn btn-warning">
                        <span data-feather="edit"></span> Sửa
                    </a>
    
                    <!-- Nút xóa, bấm vào sẽ xóa thông tin dựa vào khóa chính `sp_ma` -->
                    <a href="delete.php?sp_ma={{ sanpham.sp_ma }}" class="btn btn-danger">
                        <span data-feather="delete"></span> Xóa
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

<!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="/babyshop/assets/vendor/jquery/jquery.min.js"></script>
    <script src="/babyshop/assets/vendor/popperjs/popper.min.js"></script>
    <script src="/babyshop/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/babyshop/assets/vendor/feather/feather.min.js"></script>

<!-- jquery-validation -->
<script src="/babyshop/assets/vendor/jquery-validation/jquery.validate.min.js"></script>
<script src="/babyshop/assets/vendor/jquery-validation/localization/messages_vi.min.js"></script>

<!-- Custom script - Các file js do mình tự viết -->
<script src="/babyshop/assets/frontend/js/app.js"></script>

<!-- Block custom-scripts - Đục lỗ trên giao diện bố cục chung, đặt tên là `custom-scripts` -->
<!-- End block custom-scripts -->



{% endblock %}
{# End Nội dung trong block content #}
